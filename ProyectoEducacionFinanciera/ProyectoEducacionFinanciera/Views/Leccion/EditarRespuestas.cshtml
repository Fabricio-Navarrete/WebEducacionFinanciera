@model ProyectoEducacionFinanciera.Data.ExamOptions

<!-- Formulario para nuevo estudiante -->
<form asp-action="CreateRespuesta" method="post">
    <input type="hidden" asp-for="QuestionID" />
    <div class="form-group">
        <label asp-for="OptionText" class="control-label">Respuesta</label>
        <input asp-for="OptionText" class="form-control" required />
        <span asp-validation-for="OptionText" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsAnswer" class="control-label">¿Respuesta Correcta?</label>
        <input asp-for="IsAnswer" class="form-control"  type="checkbox" />
        <span asp-validation-for="IsAnswer" class="text-danger"></span>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
        <input type="submit" value="Guardar" class="btn btn-primary" />
    </div>
</form>


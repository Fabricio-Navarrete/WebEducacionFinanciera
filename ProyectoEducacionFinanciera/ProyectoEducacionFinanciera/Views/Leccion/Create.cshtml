@model ProyectoEducacionFinanciera.Data.Temas

<!-- Formulario para nuevo estudiante -->
<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Titulo" class="control-label">Título</label>
        <input asp-for="Titulo" class="form-control" required />
        <span asp-validation-for="Titulo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Descripcion" class="control-label">Descripción</label>
        <input asp-for="Descripcion" class="form-control" required />
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Icono" class="control-label">Ícono</label>
        <input asp-for="Icono" class="form-control" required />
        <span asp-validation-for="Icono" class="text-danger"></span>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
        <button type="submit" class="btn btn-primary">Guardar</button>
    </div>
</form>

@model ProyectoEducacionFinanciera.Data.ContenidoLecciones

<!-- Formulario para nuevo estudiante -->
<form asp-action="EditContenido" method="post">
    <input type="hidden" asp-for="IdContenido" />
    <input type="hidden" asp-for="IdLeccion" />
    <div class="form-group">
        <label asp-for="Title" class="control-label">Título</label>
        <input asp-for="Title" class="form-control" required />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="VideoId" class="control-label">Id del Video</label>
        <input asp-for="VideoId" class="form-control" />
        <span asp-validation-for="VideoId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Detalle" class="control-label">Detalle</label>
        <textarea asp-for="Detalle" class="form-control" rows="4" maxlength="500"></textarea>
        <span asp-validation-for="Detalle" class="text-danger"></span>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
        <input type="submit" value="Guardar" class="btn btn-primary" />
    </div>
</form>

